   <script type="text/javascript">
      function init() {

          "use strict";

                // change Loading -> choose map
             document.querySelector('h2').innerHTML = 'Choose map: ';
                // add canvas
                var canvas = document.createElement('canvas');
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
                canvas.id = 'canvas';

                // at the begin of body, so it will be underneath menu
                document.body.insertBefore(canvas, document.getElementById('game_div'));

                // lets get started !
                Ses.Engine.init(canvas);
                Ses.Engine.loadMaps();
                Ses.Engine.showDemo();
                //Ses.Engine.showStats();
      }
 </script>


